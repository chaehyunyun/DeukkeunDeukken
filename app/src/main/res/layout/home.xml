<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1968f8">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:src="@drawable/toplogo6"
            android:layout_marginLeft="70dp"></ImageView>
        <VideoView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/videoView3"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="9dp"></VideoView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f6f6f8"
        android:background="#f6f6f8"
        android:layout_weight="5"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >



            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="#f6f6f8"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/homeweight"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#f6f6f8"
                    android:scaleType="fitEnd"
                    android:src="@drawable/w"></ImageButton>

                <ImageButton
                    android:id="@+id/homecardio"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#f6f6f8"
                    android:scaleType="fitStart"
                    android:src="@drawable/c"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:id="@+id/bottom"
                >

                <ImageButton
                    android:id="@+id/homepart"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#f6f6f8"
                    android:scaleType="fitEnd"
                    android:src="@drawable/p"></ImageButton>

                <ImageButton
                    android:id="@+id/homestretching"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="1"
                    android:background="#f6f6f8"
                    android:scaleType="fitStart"
                    android:src="@drawable/h"></ImageButton>
            </LinearLayout>

            <ImageButton
                android:id="@+id/beginner_routine"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:src="@drawable/chobo2"
                android:background="#f6f6f8"
                android:layout_marginTop="390dp"
                android:layout_centerHorizontal="true" >
            </ImageButton>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home"
                >
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/scale"
                android:id="@+id/scale"
                >
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/calendar"
                android:id="@+id/calendar"
                >
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mypage"
                android:id="@+id/mypage"
                >
            </ImageView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>